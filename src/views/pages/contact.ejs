                <!-- contact -->
                <!-- newsletter -->
                <section class="newsletter">
                    <div class="content">
                        <h3>Newsletter</h3>
                        <p>Inscreva-se para amis atualizações</p>
                    </div>
                    <form action="">
                        <input type="email" placeholder="seu email." class="email">
                        <input type="submit" value="Inscreva-se" class="btn">
                    </form>
                </section>
                <!-- newsletter -->
                <%- include('/partials/footer')%>
                    <%- include('/partials/scripts')%>

    </body>

</html>